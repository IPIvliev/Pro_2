<CalibrationWindow>:
	name: 'calibration_window'
	GridLayout
		rows: 3

		AnchorLayout:
			size_hint: 1, 0.1
		    canvas:
		        Color:
		            rgba: 0.92, 0.94, 0.01, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Калибровка платформы'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		GridLayout:
			size_hint: 1, 0.8
			cols: 2

			FloatLayout:
				size_hint: 0.6, 1
			    canvas:
			        Color:
			            rgb: 0.1, 0.1, 0.1, 0.9
			        Rectangle:
			            pos: self.pos
			            size: 480, 384
			    BoxLayout:
				    canvas:
				        Color:
				            rgba: 0.1, 1, 0.1, 0.9
		     		
						Line:
							width: 1
							ellipse: (220, 212, 55, 55)
				BoxLayout:
				    canvas:
				        Color:
				            rgba: 1, 0.1, 0.1, 0.7
		     		
						Ellipse:
							size: 50, 50
							pos: 223, 215
				BoxLayout:
					canvas:
						Color: 
							rgba: 0.1, 0.1, 1, 0.7
						Line:
							width: 1
							rectangle: (self.x + 40, self.y + 145, 400, 200)

			BoxLayout:
				size_hint: 0.4, 1

				GridLayout:
					rows: 2

					GridLayout:
						size_hint: 0.5, 1
						cols: 1

						Label:
							size_hint: 1, 0.2
							text: 'Информация о том, \nкак откалибровать платформу.'

					GridLayout:
						size_hint: 0.5, 1
						rows: 1

						BoxLayout:
							cols: 1

							Label:
								text: 'Фотография или фидео.'

		BoxLayout:
			cols: 3
			size_hint: 1, 0.1

			BoxLayout:
				canvas:
					Color:
						rgba: 0.71, 0.72, 0.11, 1
					Rectangle:
						pos: self.pos
						size: self.size
				size_hint: 0.1, 1

				Label:
					id: temp_label
					text: ''
					font_size: sp(28)
					color: 0,0,0,0.8

			AnchorLayout:
			    size_hint: 0.75, 1
			    canvas:
			        Color:
			            rgba: 0.92, 0.94, 0.01, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'
			BoxLayout:
				size_hint: 0.15, 1
				Button:
					text: 'Назад'
					font_size: sp(28)
					background_color: 0.92, 0.94, 0.01, 1
					on_release:
						app.root.current = 'settings_window'
						root.manager.transition.direction = 'right'