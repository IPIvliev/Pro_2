<MainWindow>:
	name: 'main_window'

	light_toggle: light_toggle

	GridLayout
		rows: 3

		AnchorLayout:
		    canvas:
		        Color:
		            rgba: 0.92, 0.94, 0.01, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Главная страница'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		GridLayout:
			cols: 3
			padding: 95, 30
			spacing: 30

			GridLayout:
				cols: 1
				spacing: 15
				Button:
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 1, 0.9
					#size: 150, 150
					on_release:
						app.root.current = 'print_window'
						root.manager.transition.direction = 'left'

				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Печать'
					font_size: sp(30)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 15

				Button:
					font_size: 30
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 0.9, 0.9
					#size: 150, 150
					on_release:
						app.root.current = 'manage_window'
						root.manager.transition.direction = 'left'
				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Управление'
					font_size: sp(30)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 15

				Button:
					font_size: 30
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 0.9, 0.9
					#size: 150, 150
					on_release:
						app.root.current = 'settings_window'
						root.manager.transition.direction = 'left'
				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Настройки'
					font_size: sp(30)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 15

				ToggleButton:
					id: light_toggle
					text: 'Выключено'
					font_size: sp(30)
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 0.9, 0.9
					#size: 150, 150
					on_release:
						root.turn_light()
				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Освещение'
					font_size: sp(30)
					color: 0.92, 0.94, 0.01, 1

		BoxLayout:
			cols: 3
			size_hint: 1, 0.1

			BoxLayout:
				canvas:
					Color:
						rgba: 0.71, 0.72, 0.11, 1
					Rectangle:
						pos: self.pos
						size: self.size
				size_hint: 0.1, 1

				Label:
					id: temp_label
					text: '20C°'
					font_size: sp(28)
					color: 0,0,0,0.8

			BoxLayout:
				canvas:
					Color:
						rgba: 0.71, 0.72, 0.11, 1
					Rectangle:
						pos: self.pos
						size: self.size
				size_hint: 0.1, 1

				Label:
					id: net_label
					text: app.net_status
					font_size: sp(18)
					color: 0,0,0,0.8

			AnchorLayout:
			    canvas:
			        Color:
			            rgba: 0.92, 0.94, 0.01, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				size_hint: 0.9, 1

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'
