<PrintProcessWindow>:
	name: 'print_process_window'

	GridLayout
		rows: 3

		AnchorLayout:
		    canvas:
		        Color:
		            rgba: 0.80, 0.00, 0.00, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Идёт процесс печати'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		BoxLayout:
			cols: 2


			GridLayout:
				rows: 2
				size_hint: 0.7, 1

				BoxLayout:
					canvas:
						Color:
							rgba: 0, 0, 0, 1
						Rectangle:
				            pos: self.pos
				            size: self.size
					size_hint: 1, 0.8
					Image:
						id: layer_img
						source: 'Static/Images/black.png'

				BoxLayout:
					orientation: 'horizontal'
					size_hint: 1, 0.2

					GridLayout:
						canvas:
							Color:
								rgba: 0.80, 0.00, 0.00, 1
							Rectangle:
					            pos: self.pos
					            size: self.size
						rows: 2
						sint_size: 0.2, 1

						BoxLayout:
							spacing: 5
							sint_size: 0.3, 1

							Label:
								text: 'Текущий \nслой:'
								color: 0,0,0,0.8
								halign: 'center'
							Label:
								text: 'Всего \nслоёв:'
								color: 0,0,0,0.8
								halign: 'center'
							Label:
								text: 'Прошло \nвремени:'
								color: 0,0,0,0.8
								halign: 'center'
							Label:
								text: 'Время \nпечати:'
								color: 0,0,0,0.8
								halign: 'center'

						BoxLayout:
							spacing: 5
							sint_size: 0.7, 1

							Label:
								text: '5'
								color: 0,0,0,0.8
								halign: 'center'
							Label:
								id: layers_amount
								color: 0,0,0,0.8
								halign: 'center'
								text: ''
							Label:
								text: '00:01:15'
								color: 0,0,0,0.8
								halign: 'center'
							Label:
								id: printing_time
								color: 0,0,0,0.8
								halign: 'center'
								text: ''

					GridLayout:
						canvas:
							Color:
								rgba: 0.71, 0.72, 0.11, 1
							Rectangle:
					            pos: self.pos
					            size: self.size
						rows: 2
						size_hint: 0.3, 1

						Label:
							text: 'Температура \nохлаждения:'
							color: 0,0,0,0.8
							halign: 'center'
						Label:
							text: '25 C°'
							color: 0,0,0,0.8
							halign: 'center'


					BoxLayout:
						size_hint: 0.25, 1

						Button:
							text: 'Пауза'
							on_release:
								root.pause() 

					BoxLayout:
						size_hint: 0.25, 1

						Button:
							text: 'Остановка'
							on_release:
								root.stop() 
								app.root.current = 'main_window'
								root.manager.transition.direction = 'right'



	        GridLayout:
	        	rows: 3
	        	size_hint: 0.3, 1
			    canvas:
			        Color:
			            rgba: 1, 1, 1, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size
				AnchorLayout:
				    canvas:
				        Color:
				            rgba: 0.80, 0.00, 0.00, 1
				        Rectangle:
				            pos: self.pos
				            size: self.size

					size_hint: 1, 0.1
					anchor_x: 'center'
					anchor_y: 'center'



					Label:
						color: 0,0,0,0.8
						id: text_input
						text: 'Информация о модели'
						font_size: '15'
						multiline: False
						input_type: 'number'
						input_filter: 'int'

				GridLayout:
					opacity: 1
					size_hint: 1, 0.8
					rows: 3

					AnchorLayout:
						size_hint: 1, 0.1
						anchor_x: 'center'
						anchor_y: 'center'
						Label:
							id: model_name
							color: 0,0,0,0.8
							text: ''
					GridLayout:
						size_hint: 1, 0.4
						rows: 2

						GridLayout:
							rows: 5

							GridLayout:
								cols: 2
								BoxLayout:
									Label:
										text: 'Засветка низа:'
										color: 0,0,0,0.8
										font_size: '12'
								BoxLayout:
									Label:
										id: bottom_light
										text: '25'
										color: 0,0,0,0.8
							GridLayout:
								cols: 2
								BoxLayout:
									Label:
										text: 'Основная засветка:'
										color: 0,0,0,0.8
										font_size: '12'
								BoxLayout:
									Label:
										id: main_light
										text: '25'
										color: 0,0,0,0.8										
							GridLayout:
								cols: 2
								BoxLayout:
									Label:
										text: 'Вес модели:'
										color: 0,0,0,0.8
										font_size: '12'
								BoxLayout:
									Label:
										id: model_weight
										text: '25'
										color: 0,0,0,0.8
							GridLayout:
								cols: 2
								BoxLayout:
									Label:
										text: 'Толщина слоя:'
										color: 0,0,0,0.8
										font_size: '12'
								BoxLayout:
									Label:
										id: model_thinkness
										text: '25'
										color: 0,0,0,0.8
							GridLayout:
								cols: 2
								BoxLayout:
									Label:
										text: 'Скорость подъёма:'
										color: 0,0,0,0.8
										font_size: '12'
								BoxLayout:
									Label:
										id: lifting_speed
										text: '25'
										color: 0,0,0,0.8
					AnchorLayout:
						anchor_x: 'center'
						anchor_y: 'bottom'
						size_hint: 1, 0.5

						Image:
							size_hint: 1, 1
							id: model_img
							source: 'Static/Images/preview.png'

		BoxLayout:
			cols: 2
			size_hint: 1, 0.1

			BoxLayout:
				canvas:
					Color:
						rgba: 0.71, 0.72, 0.11, 1
					Rectangle:
						pos: self.pos
						size: self.size
				size_hint: 0.1, 1

				Label:
					id: temp_label
					text: ''
					font_size: sp(28)
					color: 0,0,0,0.8

			AnchorLayout:
			    canvas:
			        Color:
			            rgba: 0.80, 0.00, 0.00, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				size_hint: 0.9, 1

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'