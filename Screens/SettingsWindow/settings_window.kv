<SettingsWindow>:
	name: 'settings_window'
	GridLayout
		rows: 3

		AnchorLayout:
		    canvas:
		        Color:
		            rgba: 0.92, 0.94, 0.01, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Настройки принтера'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		GridLayout:
			cols: 3
			padding: 95, 30
			spacing: 30

			GridLayout:
				cols: 1
				spacing: 5
				Button:
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 1, 0.9
					#size: 150, 150
					on_release:
						app.root.current = 'about_window'
						root.manager.transition.direction = 'left'

				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'О принтере'
					font_size: sp(20)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 5

				Button:
					id: net_bottom
					text: app.net_status
					font_size: sp(20)			
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 1, 0.9
					#size: 150, 150
					disabled: False
					on_release:
						app.root.current = 'net_window'
						root.manager.transition.direction = 'left'
				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Сетевое подключение'
					font_size: sp(20)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 5

				Button:
					text: 'Обновлено'
					font_size: sp(20)				
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 1, 0.9
					#size: 150, 150
					disabled: True
					on_release:
						root.restart()

				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Обновление'
					font_size: sp(20)
					color: 0.92, 0.94, 0.01, 1

			GridLayout:
				cols: 1
				spacing: 5
				opacity: 1 if root.manager.developer_mode == 1 else 0
				disabled: False if root.manager.developer_mode == 1 else True

				Button:
					text: 'Разработчик'
					font_size: sp(20)
					background_color: 0.92, 0.94, 0.01, 1
					size_hint: 1, 0.9
					#size: 150, 150
					on_release:
						app.root.current = 'developer_window'
						root.manager.transition.direction = 'left'
				Label:
					size_hint: 1, 0.1
					#size: 150, 10
					text: 'Дополнительно'
					font_size: sp(20)
					color: 0.92, 0.94, 0.01, 1

		BoxLayout:
			cols: 2
			size_hint: 1, 0.1

			AnchorLayout:
			    size_hint: 0.75, 1
			    canvas:
			        Color:
			            rgba: 0.80, 0.00, 0.00, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'
			BoxLayout:
				size_hint: 0.15, 1
				Button:
					text: 'Назад'
					font_size: sp(28)
					background_color: 0.80, 0.00, 0.00, 1
					on_release:
						app.root.current = 'settings_window'
						root.manager.transition.direction = 'right'
