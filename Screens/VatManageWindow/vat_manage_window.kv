<VatManageWindow>:
	name: 'vat_manage_window'
	GridLayout
		rows: 3

		AnchorLayout:
		    canvas:
		        Color:
		            rgba: 0.92, 0.94, 0.01, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Уровень фотополимера'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		GridLayout:
			cols: 2

			BoxLayout:
				size_hint: 0.4, 1
			    canvas:
			        Color:
			            rgba: 0.1, 0.1, 0.1, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size				

			BoxLayout:
				size_hint: 0.6, 1

				GridLayout:
					cols: 2

					GridLayout:
						size_hint: 0.3, 1
						rows: 2

						Label:
							size_hint: 1, 0.5
							text: 'Работа \nнасоса:'
						Label:
							size_hint: 1, 0.5
							text: 'Внимание!'

					GridLayout:
						size_hint: 0.7, 1
						rows: 2

						BoxLayout:
							cols: 2
							padding: 25
							spacing: 20
							size_hint: 1, 0.5

							Button:
								text: 'Наполнить \nванну'
								halign: 'center'
								on_press:
									root.pour_in()
								on_release:
									root.stop_pressing()
							Button:
								text: 'Слить \nв ёмкость'
								halign: 'center'
								on_press:
									root.pour_out()
								on_release:
									root.stop_pressing()
									
						BoxLayout:
							cols: 3
							
							size_hint: 1, 0.5

							Label:
								text: 'В ручном режиме датчик ограничения \nнаполняемости ванны отключен. \nСледите за переливом фотополимера.'


		BoxLayout:
			cols: 3
			size_hint: 1, 0.1

			BoxLayout:
				canvas:
					Color:
						rgba: 0.71, 0.72, 0.11, 1
					Rectangle:
						pos: self.pos
						size: self.size
				size_hint: 0.1, 1

				Label:
					id: temp_label
					text: ''
					font_size: sp(28)
					color: 0,0,0,0.8

			AnchorLayout:
			    size_hint: 0.75, 1
			    canvas:
			        Color:
			            rgba: 0.92, 0.94, 0.01, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'
			BoxLayout:
				size_hint: 0.15, 1
				Button:
					text: 'Назад'
					font_size: sp(28)
					background_color: 0.92, 0.94, 0.01, 1
					on_release:
						app.root.current = 'manage_window'
						root.manager.transition.direction = 'right'