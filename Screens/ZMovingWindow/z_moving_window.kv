<ZMovingWindow>:
	name: 'z_moving_window'
	GridLayout
		rows: 3

		AnchorLayout:
		    canvas:
		        Color:
		            rgba: 0.92, 0.94, 0.01, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size

			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'

			Label:
				color: 0,0,0,0.8
				id: text_input
				text: 'Перемещение по оси Z'
				font_size: sp(36)
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		GridLayout:
			cols: 2

			BoxLayout:
				size_hint: 0.3, 1
			    canvas:
			        Color:
			            rgba: 0.1, 0.1, 0.1, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size		
				GridLayout:
					rows: 2

					BoxLayout:
						size_hint: 1, 0.7

					GridLayout:
						size_hint: 1, 0.3
						rows: 2
						
						BoxLayout:
							size_hint: 1, 0.5
							Label:
								id: scale_label
								text: 'Вес полимера:'
								font_size: sp(28)
						BoxLayout:
							size_hint: 1, 0.5
							Label:
								id: scale_value
								text: '0.00'
								font_size: sp(28)		

			BoxLayout:
				size_hint: 0.7, 1

				GridLayout:
					cols: 2

					GridLayout:
						size_hint: 0.3, 1
						rows: 3

						Label:
							size_hint: 1, 0.2
							text: 'Длина шага:'
						Label:
							size_hint: 1, 0.2
							text: 'Режим движения:'
						Label:
							size_hint: 1, 0.6
							text: 'Управление:'

					GridLayout:
						size_hint: 0.7, 1
						rows: 3

						BoxLayout:
							cols: 4
							padding: 25
							size_hint: 1, 0.2

							ToggleButton:
								text: '10 мкм'
								group: 'foot'
								size: 70, 30
								size_hint: None, None
								on_press:
									root.go_10()
							ToggleButton:
								text: '50 мкм'
								group: 'foot'
								state: 'down'
								size: 70, 30
								size_hint: None, None
								on_press:
									root.go_50()							
							ToggleButton:
								text: '100 мкм'
								group: 'foot'
								size: 70, 30
								size_hint: None, None
								on_press:
									root.go_100()
							ToggleButton:
								text: '1 мм'
								group: 'foot'
								size: 70, 30
								size_hint: None, None
								on_press:
									root.go_1000()
						BoxLayout:
							cols: 2
							padding: 25
							size_hint: 1, 0.2

							ToggleButton:
								text: 'По шагам'
								group: 'z'
								state: 'down'
								size: 150, 30
								size_hint: None, None
								on_press:
									root.by_step()
							ToggleButton:
								text: 'До остановки'
								group: 'z'
								size: 150, 30
								size_hint: None, None
								on_press:
									root.by_distance()
						BoxLayout:
							canvas:
								Color:
									rgba: 0.1, 0.1, 0.1, 1
								Rectangle:
									pos: self.pos
									size: self.size							
							cols: 3
							padding: 25
							spacing: 20
							size_hint: 1, 0.6

							Button:
								id: go_up
								text: 'Вверх'
								on_press:
									root.motor_go_up()
							Button:
								text: 'Стоп'
								on_press:
									root.stop()
							Button:
								id: go_down
								text: 'Вниз'
								on_press:
									root.motor_go_down()								


		BoxLayout:
			cols: 2
			size_hint: 1, 0.1

			AnchorLayout:
			    size_hint: 0.75, 1
			    canvas:
			        Color:
			            rgba: 0.80, 0.00, 0.00, 1
			        Rectangle:
			            pos: self.pos
			            size: self.size

				Label:
					id: text_input
					text: 'ООО "НПП "3D Аддитивные технологии"'
					color: 0,0,0,0.8
					font_size: sp(28)
					#text-align: 'left'
					multiline: False
					input_type: 'number'
					input_filter: 'int'
			BoxLayout:
				size_hint: 0.15, 1
				Button:
					text: 'Назад'
					font_size: sp(28)
					background_color: 0.80, 0.00, 0.00, 1
					on_release:
						app.root.current = 'settings_window'
						root.manager.transition.direction = 'right'
